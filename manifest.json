{
  "manifest_version": 3,
  "name": "Simply",
  "version": "1.0",
  "description": "A chrome extension to simplify and summarize highlighted text.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "contextMenus", "scripting", "sidePanel"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["sidepanel_contentScript.js"]
    }
  ]
}
